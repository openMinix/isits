<div class="content">
	<%= form_for @sheetfile, html: {role: "form",class: "content-center"} do |f| %>
		<blockquote>
				<p>Edit sheetfile no# <%= @sheetfile.id %></p>
		</blockquote>
		<div class="form-group">	
			<%= f.label :timesheet_id %>
			<%= f.text_field :timesheet_id, :input_html => { :value => @sheetfile.timesheet_id }, :class => 'form-control', :readonly => true %>
		</div>
		<div class="form-group">	
		<%= f.label :day %>
		<%= f.date_select "day", {:start_year => 2008,
                               :use_month_numbers => false,
                               :discard_day => false,
                               :order => [:year, :month, :day]}, {:value => @sheetfile.day, :class => 'form-control' } %>
		</div>					   
		<button class="btn btn-success"><i class='fa fa-file-text-o'></i><%= f.submit "Update sheetfile", :class => 'btn btn-success no-border' %></button>					   
	<% end %>	
	
	<%= link_to(raw(("<i class='fa fa-plus-circle pr10'></i>") + "Add activity"), new_activity_path(:my_activity => { :sheetfile_id => @sheetfile.id }), :class => "btn btn-info") %>
	<br><br>
	<%= link_to(raw(("<i class='fa fa-files-o pr10'></i>") + "Show sheetfile"), @sheetfile, :class => "btn btn-info") %>
	
	<br><br>
	<%= link_to(raw(("<i class='fa fa-reply pr10'></i>") + "Back"), sheetfiles_path(:my_sheetfile => { :timesheet_id => @sheetfile.timesheet_id }), :class => "btn btn-primary btn-sm") %>	

</div>
