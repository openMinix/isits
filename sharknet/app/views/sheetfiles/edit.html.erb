<div id="form-signin">
	<%= form_for @sheetfile do |f| %>
		<h1> Edit sheetfile </h1>
		
		<%= f.label :timesheet_id %>
		<%= f.text_field :timesheet_id, :input_html => { :value => @sheetfile.timesheet_id }, :class => 'signin-input' %>
		
		<%= f.label :day %>
		<%= f.date_select "day", :start_year => 2008,
                               :use_month_numbers => false,
                               :discard_day => false,
                               :order => [:year, :month, :day] %>
		<%= f.submit "Update sheetfile", :class => 'signin-submit' %>					   
	<% end %>	
	<%= link_to 'Add activity', new_activity_path(:my_activity => { :sheetfile_id => @sheetfile.id }) %>
	<%= link_to 'Show', @sheetfile %> |
	<%= link_to 'Back', sheetfiles_path(:my_sheetfile => { :timesheet_id => @sheetfile.timesheet_id }) %>
</div>
