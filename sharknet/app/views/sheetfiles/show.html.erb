<div class="content">
<% if(notice) %>
	<p id="notice"><%= notice %></p>
<% end %>	

<blockquote>
	<p>Sheetfile no# <%= @sheetfile.id %></p>
</blockquote>	

<div class="table-responsive">
<table class="table table-striped table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Day</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>

  <tbody>
    <tr>
        <td><%= @sheetfile.day %></td>
        <td><i class="fa fa-folder-open-o pr10"></i><%= link_to 'View activities', activities_path(:my_activity => { :sheetfile_id => @sheetfile.id }) %></td>
        <td><i class="fa fa-pencil pr10"></i><%= link_to 'Edit', edit_sheetfile_path(@sheetfile) %></td>
      </tr>
  </tbody>
</table>
</div>

<button class="btn btn-primary btn-sm"><%= link_to 'Back', sheetfiles_path(:my_sheetfile => { :timesheet_id => @sheetfile.timesheet_id }) %></button>

</div>