<div class="content">
	<%= form_for @sheetfile , html: {role: "form",class: "content-center"} do |f| %>
		<blockquote>
			<p>New sheetfile</p>
		</blockquote>
		<div class="form-group">
			<%= f.label :timesheet_id %>
			<%= f.text_field :timesheet_id, :input_html => { :value => @sheetfile.timesheet_id }, :class => 'form-control', :readonly => true %>
		</div>
		<div class="form-group">
			<%= f.label :day %>
			<%= f.date_select "day", {:start_year => 2008,
								   :use_month_numbers => false,
								   :discard_day => false,
								   :order => [:year, :month, :day]},{:class => "form-control"} %>
		</div>
		<div class="form-group">
			<%= f.label :vacation %>
			<%= f.select :vacation, options_for_select({"No" => 0,"Yes" => 1, "Medical"=> 2}),{}, {:class => "form-control"} %>
		</div>
		<%= button_tag(type: 'submit', class: "btn btn-success") do %>
			<i class="fa fa-file-text-o"></i> Create sheetfile
		<% end %>
		
	<% end %>
	<%= link_to(raw(("<i class='fa fa-reply pr10'></i>") + "Back"), sheetfiles_path, :class => "btn btn-primary btn-sm") %>
	
</div>
