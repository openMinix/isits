<div class="content">
	<%= form_for @project, html: {role: "form",class: "content-center"} do |f| %>
		<blockquote>
			<p>New project</p>
		</blockquote>
		
		<div class="form-group">
			<%= f.label :project_name %>
			<%= f.text_field :project_name, :class => 'form-control' %>
		</div>	
		
		<div class="form-group">
			<%= f.hidden_field :client_id, :input_html => { :value => @project.client_id }, :class => 'form-control' %>
		</div>
		<div class="form-group">
			<%= fields_for @project.client do |client_fields| %>
				<%= f.label :client %><br>
				<%= client_fields.text_field :client_name, :readonly => true, :class => "form-control" %>
			<% end %>
		</div>

		<%= button_tag(type: 'submit', class: "btn btn-success") do %>
			<i class="fa fa-file-text-o"></i> Create project
		<% end %>	
		
	<% end %>
	<%= link_to(raw(("<i class='fa fa-reply pr10'></i>") + "Back"), projects_path(:my_project => { :client_id => @project.client_id }), :class => "btn btn-primary btn-sm") %>	
	
</div>








