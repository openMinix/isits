<div id="myform">
	<%= form_for(@project) do |f| %>
		<h1>Editing project</h1>

		<%= f.label :project_name %>
		<%= f.text_field :project_name, :class => 'signin-input' %>
  
		<%= fields_for @project.client do |client_fields| %>
			<%= f.label :client %><br>
			<%= client_fields.text_field :client_name, :readonly => :true, :class => 'signin-input' %>
		<% end %>
		<%= f.submit "Update project", :class => 'btn btn-primary signin-submit' %>
	<% end %>

<%= link_to 'Show', @project %> |
<%= link_to 'Back', projects_path(:my_project => { :client_id => @project.client_id }) %>
</div>
