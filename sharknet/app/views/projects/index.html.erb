<div class="content">
	<blockquote>
		<p>Listing projects</p>
	</blockquote>	

	<div class="table-responsive">
		<table class="table table-striped table-bordered table-hover table-condensed">
		  <thead>
			<tr>
			  <th>Project name</th>
			  <th>Client</th>
			  <th></th>
			  <th></th>
			  <th></th>
			</tr>
		  </thead>

		  <tbody>
			<% @projects.each do |project| %>
			  <tr>
				<td><%= project.project_name %></td>
				<td><%= project.client.client_name%></td>
				<td><i class="fa fa-folder-open-o pr10"></i><%= link_to 'Show', project %></td>
				<td><i class="fa fa-pencil pr10"></i><%= link_to 'Edit', edit_project_path(project) %></td>
				<td><i class="fa fa-ban pr10"></i><%= link_to 'Destroy', delete_project_path(project)%></td>
			  </tr>
			<% end %>
		  </tbody>
		</table>
	</div>

<%= link_to 'New Project', new_project_path(:my_project => { :client_id => @client_id }) %>
</div>
