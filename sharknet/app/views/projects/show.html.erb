<div class="content">
	<% if(notice) %>
	<p id="notice"><%= notice %></p>
	<% end %>
	
	<blockquote>
		<p>Project no# <%= @project.id %></p>
	</blockquote>	
	
	<div class="table-responsive">
		<table class="table table-striped table-bordered table-hover table-condensed">
			<thead>
				<tr>
				  <th>Project name</th>
				  <th>Client name</th>
				  <th>Action</th>
				</tr>
			</thead>
			
			<tbody>
				<tr>
					<td><%= @project.project_name %></td>
					<%= fields_for @project.client do |client_fields| %>
						<td>
							<%= client_fields.text_field :client_name, :readonly => true, :class => "no-border" %>
						</td>
					<% end %>
					
					<td><i class="fa fa-pencil pr10"></i><%= link_to 'Edit',edit_project_path(@project) %>
				</tr>
			</tbody>
		</table>
	</div>		

<%= link_to(raw(("<i class='fa fa-reply pr10'></i>") + "Back"), projects_path(:my_project => { :client_id => @project.client_id }), :class => "btn btn-primary btn-sm") %>	
	
</div>
