<div id="myform" class="listing-table">
<h1>Listing timesheets for <%= current_user.department.division.div_name %> division</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Period</th>
      <th>User</th>
      <th>Department</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @timesheets.each do |timesheet| %>
      <tr>
        <td><%= timesheet.status %></td>
        <td><%= timesheet.period %></td>
        <td><%= timesheet.user.user_fullname%></td>
        <td><%= timesheet.user.department.dept_name%></td>
        <td><%= link_to 'Show', timesheet %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>
