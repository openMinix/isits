<div class="content">
	<blockquote>
		<p>Listing timesheets for <%= current_user.department.division.div_name %> division</p>
	</blockquote>
	<div class="table-responsive">
		<table class="table table-striped table-bordered table-hover table-condensed">
		  <thead>
			<tr>
			  <th>Status</th>
			  <th>Period</th>
			  <th>User</th>
			  <th>Department</th>
			  <th>Action</th>
			</tr>
		  </thead>

		  <tbody>
			<% @timesheets.each do |timesheet| %>
			  <tr>
				<td><%= timesheet.status %></td>
				<td><%= timesheet.period %></td>
				<td><%= timesheet.user.user_fullname%></td>
				<td><%= timesheet.user.department.dept_name%></td>
				<td><i class="fa fa-folder-open-o pr10"></i><%= link_to 'Show', timesheet %></td>
			  </tr>
			<% end %>
		  </tbody>
		</table>
	</div>
</div>
