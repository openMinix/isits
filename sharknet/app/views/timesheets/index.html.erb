<div class="content">
<blockquote>
	<p>Listing timesheets</p>
</blockquote>	

<div class="table-responsive">
<table class="table table-striped table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Status</th>
      <th>Period</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @timesheets.each do |timesheet| %>
      <tr>
        <td><%= timesheet.status %></td>
        <td><%= timesheet.period %></td>
        <td> <i class="fa fa-folder-open-o pr10"></i><%= link_to 'Show', timesheet %></td>
        <% if timesheet.status != 'APPROVED' %> 
        <td><i class="fa fa-pencil pr10"></i><%= link_to 'Edit', edit_timesheet_path(timesheet) %></td>
        <% else %>
        <td>Non-editable </td>
        <% end %>
        <td><i class="fa fa-ban pr10"></i><%= link_to 'Destroy', timesheet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<button type="button" class="btn btn-success">
	<i class="fa fa-plus-circle"></i>
	<%= link_to 'New Timesheet', new_timesheet_path %>
</button>	
</div>
