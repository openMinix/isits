<div class="content">
	<% if(notice) %>
		<p id="notice"><%= notice %></p>
	<% end %>

	<blockquote>
		<p>Timesheet no# <%= @timesheet.id %></p>
	</blockquote>	

	<div class="table-responsive">
		<table class="table table-striped table-bordered table-hover table-condensed">
		  <thead>
			<tr>
			  <th>Status</th>
			  <th>Period</th>
			  <th colspan="2">Actions</th>
			</tr>
		  </thead>

		  <tbody>
			<tr>
				<td><%= @timesheet.status %></td>
				<td><%= @timesheet.period %></td>
				<td><i class="fa fa-folder-open-o pr10"></i><%= link_to 'View sheetfiles', sheetfiles_path(:my_sheetfile => { :timesheet_id => @timesheet.id }) %></td>
    <%if @timesheet.status == 'OPEN' %>
        <td><i class="fa fa-pencil pr10"></i><%= link_to 'Edit', edit_timesheet_path(@timesheet) %></td>
    <% else %>
        <td>Non-editable </td>
    <% end %>
			  </tr>
		  </tbody>
		</table>
	</div>

<%= link_to(raw(("<i class='fa fa-reply pr10'></i>") + "Back"), timesheets_path, :class => "btn btn-primary btn-sm") %>	

</div>
