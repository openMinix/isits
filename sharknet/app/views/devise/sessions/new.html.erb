<div class="content">
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {role: "form",class: "content-center"})  do |f| %>
		<blockquote>
			<p>Sign in</p>
		</blockquote>	
		<div class="form-group">
			<%= f.label :email %>
			<%= f.email_field :email, :autofocus => true, :class => 'form-control' %>
		</div>
		<div class="form-group">
			<%= f.label :password %>
			<%= f.password_field :password, :class => 'form-control' %>
		</div>
		<div class="form-group">
			<% if devise_mapping.rememberable? -%>
				<%= f.label :remember_me %>
				<%= f.check_box :remember_me, :class => 'signin-checkbox' %>
			<% end -%>
		</div>
		<%= button_tag(type: 'submit', class: "btn btn-success") do %>
			<i class="fa fa-sign-in pr10"></i> Sign in
		<% end %>
		
	<% end %>
	<%= render "devise/shared/links" %>
</div> 


