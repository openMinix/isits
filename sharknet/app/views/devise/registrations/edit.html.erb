<div class="content">

	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, role: "form",class: "content-center" }) do |f| %>
	  <%= devise_error_messages! %>
	  
		<blockquote>
			<p>Edit user no# <%= resource.id %></p>
		</blockquote>

		<div class="form-group">
			<%= f.label :email %>
			<%= f.email_field :email, :autofocus => true, :class => "form-control" %>
		</div>
	
	  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
		<div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
	  <% end %>

		<div class="form-group">
			<%= f.label :password %> <i>(leave blank if you don't want to change it)</i>
			<%= f.password_field :password, :autocomplete => "off" , :class => "form-control" %>
		</div>	

		<div class="form-group">	
			<%= f.label :password_confirmation %>
			<%= f.password_field :password_confirmation, :class => "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i>
			<%= f.password_field :current_password, :class => "form-control" %>
		</div>

		<button class="btn btn-success"><i class='fa fa-file-text-o'></i><%= f.submit "Update", :class => "btn btn-success no-border" %></button>	
	  
	<% end %>



<p>Unhappy?</p> 
<%= link_to raw(("<i class='fa fa-frown-o pr10'></i>") + "Cancel my account") , registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => "btn btn-warning" %>
<br><br>
<%= link_to(raw(("<i class='fa fa-reply pr10'></i>") + "Back"), :back, :class => "btn btn-primary btn-sm") %>	

</div>