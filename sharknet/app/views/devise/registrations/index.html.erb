<div class="content">
	<blockquote>
		<p>Listing users</p>
	</blockquote>	
	<div class="table-responsive">
		<table class="table table-striped table-bordered table-hover table-condensed">
		  <thead>
			<tr>
			  <th>Full name</th>
			  <th>User email</th>
			  <th>Job title</th>
			  <th colspan="2">Action</th>
			</tr>
		  </thead>

		  <tbody>
			<% @users.each do |user| %>
			  <tr>
				<td><%= user.user_fullname %></td>
				<td><%= user.email %> </td>
				<td><%= user.user_job.title %></td>
				<td><i class="fa fa-pencil pr10"></i><%= link_to "Edit",memberships_edit_path(user) %></td>
				<td><i class="fa fa-ban pr10"></i><%= link_to "Destroy", admin_destroy_user_path(user), method: :delete, data: { confirm: "You sure?" } %></td>			
			  </tr>
			<% end %>
		  </tbody>
		</table>
	</div>

<%= link_to(raw(("<i class='fa fa-plus-circle pr10'></i>") + "Add User"), new_user_registration_path, :method => :get, :class => "btn btn-success") %>	
	
</div>

