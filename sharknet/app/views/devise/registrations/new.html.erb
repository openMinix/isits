<div class="content">
	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name) , html: {role: "form",class: "content-center"}) do |f| %>
		<blockquote>
			<p>Add user</p>
		</blockquote>
		<%= devise_error_messages! %>

		<div class="form-group">	
			<%= f.label :email %>
			<%= f.email_field :email, :autofocus => true, :class => 'form-control' %>
		</div>
		<div class="form-group">
			<%= f.label :password %>
			<%= f.password_field :password, :class => 'form-control' %>
		</div>
		<div class="form-group">
			<%= f.label :password_confirmation %>
			<%= f.password_field :password_confirmation, :class => 'form-control' %>
		</div>
		<div class="form-group">
			<%= f.label :user_fullname%>
			<%= f.text_field :user_fullname, :class => 'form-control' %>
		</div>
		<div class="form-group">
			<%= f.label :user_job%>
			<%= collection_select(:user, :user_job_id, UserJob.where(:id => [1, 4, 5] ), :id, :title, {}, {:class=>'form-control'}) %>
		</div>

      <div class="form-group">
      <%= f.label :department_id %>
      <%= grouped_collection_select(:user, :department_id, Division.all, :departments, :div_name, :id, :dept_name, {}, {:class=>'form-control'}) %>
      </div>
		
		<%= button_tag(type: 'submit', class: "btn btn-success") do %>
			<i class="fa fa-file-text-o"></i> Add user
		<% end %>
		
	<% end %>	
	<%= render "devise/shared/links" %>
</div>
