<div id="form-signin">
	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
		<h1>Sign up</h1>
		<%= devise_error_messages! %>

		<%= f.label :email %>
		<%= f.email_field :email, :autofocus => true, :class => 'signin-input' %>

		<%= f.label :password %>
		<%= f.password_field :password, :class => 'signin-input' %>

		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation, :class => 'signin-input' %>

		<%= f.submit "Sign up", :class => 'signin-submit' %>
	<% end %>	
	<%= render "devise/shared/links" %>
</div>
