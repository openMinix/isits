<div class="content">
	<blockquote>
		<p>Report listing employees from department</p>
	</blockquote>

	<div class="table-responsive">
		<table class="table table-striped table-bordered table-hover table-condensed">
			<thead>
				<tr>
					<th>Employee name</th>
				</tr>
			</thead>

			<tbody>
				<% users_array = [] %>
				<% @users.each do |userr| %>
					<tr>
						<td><%= userr.uf %></td>
						<% users_array.push(userr.uf) %>
					</tr>
				<% end %>	
			</tbody>
		</table>
	</div>
	
	<%= link_to(raw(("<i class='fa fa-download pr10'></i>") + "Download PDF"), {:controller => "activities", :action => "pdf_div_users",:par => users_array}, {:class => 'btn btn-primary', :method => :get} ) %>

	
</div>
