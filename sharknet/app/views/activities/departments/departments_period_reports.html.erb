<div class="content">
	<blockquote>
		<p>Report listing</p>
	</blockquote>

	<div class="table-responsive">
		<table class="table table-striped table-bordered table-hover table-condensed">
			<thead>
				<tr>
					<td>Project name</td>
					<td>Hours worked</td>
				</tr>
			</thead>
	
			<tbody>
				<% @user_activities.each do |activity| %>
					<tr>
						<td><%= activity.project.project_name %></td>
						<td><%= activity.hoursw %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
