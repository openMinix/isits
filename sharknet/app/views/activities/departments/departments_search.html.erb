<div class="content">
	<%= form_tag(activities_depresults_path, method: "get", role: "form",class: "content-center" ) do %>
		<blockquote>
			<p>New reports</p>
		</blockquote>

		<div class="form-group">
			<%= label_tag(:id, "User ID:") %>
      <%= select_tag :id, options_from_collection_for_select(User.all, "id", "user_fullname") %>

		</div>
		<div class="form-group">
			<%= label_tag(:recorddate, "Activities start date:") %>
			<%= select_date Date.today, {prefix: :created_at}, {:class => 'form-control'} %>
		</div>
		<div class="form-group">
			<%= label_tag(:recorddate, "Activities end date:") %>
			<%= select_date Date.today, {prefix: :created_at_end}, {:class => 'form-control'} %>
		</div>

	  <%= button_tag(:type => 'submit', :class => 'btn btn-success') do %>
		<i class="fa fa-plus-circle pr10"></i>Generate 
		<% end %>
	<% end %>
</div>
