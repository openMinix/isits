<div class="content">
	<blockquote>
		<p>Report listing</p>
	</blockquote>

	<div class="table-responsive">
		<table class="table table-striped table-bordered table-hover table-condensed">
			<thead>
				<tr>
					<th><i class="fa fa-male pr10"></i>Employee</th>
					<th><i class="fa fa-ticket pr10"></i>Hours worked</th>
					<th><i class="fa fa-trophy pr10"></i>Extra hours</th>
				</tr>
			</thead>

			<tbody>
				<% 
					users_array = []
				%>
					<% @user_activities.each do |activity| %>
					<tr>	
						<td><%= activity.user_fullname %></td>
						<% users_array.push(activity.user_fullname) %>
						
						<td><%= activity.hoursw %></td>
						<% users_array.push(activity.hoursw) %>
						
						<td><%= activity.extrah %></td>
						<% users_array.push(activity.extrah) %>
					</tr>	
					<% end %>	
			</tbody>
		</table>
	</div>
	<%= link_to(raw(("<i class='fa fa-download pr10'></i>") + "Download PDF"), {:controller => "activities", :action => "pdf_dept_projects",:par => users_array}, {:class => 'btn btn-primary', :method => :get} ) %>

</div>
