<div class="content">
	<blockquote>
		<p>Report listing</p>
	</blockquote>

	<div class="table-responsive">
		<table class="table table-striped table-bordered table-hover table-condensed">
			<thead>
        <tr>
        <th>Division name</th>
        <th>Department name</th>
        <th>Project name</th>
        <th>Hours worked</th>
        </tr>

			</thead>


			<tbody>
       <% @user_activities.each do |activity| %>
       <tr>

          <td><%= Department.find(activity.department_id).division.div_name%></td>
          <td><%= Department.find(activity.department_id).dept_name  %></td>
          <td><%= Project.find(activity.project_id).project_name  %></td>
          <td><%= activity.hoursw %></td>
       </tr>
       <% end %>

			</tbody>
		</table>
	</div>
</div>
