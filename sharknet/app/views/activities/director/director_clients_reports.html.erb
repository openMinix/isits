<div class="content">
	<blockquote>
		<p>Report listing</p>
	</blockquote>

	<div class="table-responsive">
		<table class="table table-striped table-bordered table-hover table-condensed">
			<thead>
				<tr>
				  <th>Project name </th>
				  <th>Projects client</th>
				  <th>Work hours </th>
				</tr>
			</thead>

			<tbody>
				<% 
					users_array = []
				%>
			   <% @activities.each do |activity| %>
				   <tr>

					   <td><%= activity.project.project_name %></td>
					   <% users_array.push(activity.project.project_name) %>
					   
					   <td><%= activity.project.client.client_name %></td>
					   <% users_array.push(activity.project.client.client_name) %>
					   
					   <td><%= activity.hoursw %></td>
					   <% users_array.push(activity.hoursw) %>
				   </tr>
			  <% end %>

			</tbody>
		</table>
	</div>
	
	<%= link_to(raw(("<i class='fa fa-plus-circle pr10'></i>") + "Make PDF"), {:controller => "activities", :action => "pdf_director_clients",:par => users_array}, {:class => 'btn btn-primary', :method => :get} ) %>

</div>
