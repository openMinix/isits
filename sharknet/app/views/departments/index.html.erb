<div id="myform" class="listing-table">
<h1>Listing departments</h1>

<table>
  <thead>
    <tr>
      <th>Department name</th>
      <th>Division name</th>
      <th>Division head</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.dept_name %></td>
        <td><%= department.division.div_name %></td>
        <% if department.user == nil %>
        <td>Nobody assigned</td>
        <% else %>
        <td><%= department.user.user_fullname%></td>
        <% end %>
        <td><%= link_to 'Show', department %></td>
        <td><%= link_to 'Edit', edit_department_path(department) %></td>
        <td><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Department', new_department_path(:my_department => { :division_id => @division_id }) %>
</div>
