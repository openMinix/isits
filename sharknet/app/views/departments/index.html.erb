<div class="content">
	<blockquote>
		<p>Listing departments</p>
	</blockquote>	

	<div class="table-responsive">
		<table class="table table-striped table-bordered table-hover table-condensed">
		  <thead>
			<tr>
			  <th>Department name</th>
			  <th>Division name</th>
			  <th>Division head</th>
			  <th colspan="3">Actions</th>
			</tr>
		  </thead>

		  <tbody>
			<% @departments.each do |department| %>
			  <tr>
				<td><%= department.dept_name %></td>
				<td><%= department.division.div_name %></td>
				<% if department.user == nil %>
				<td>Nobody assigned</td>
				<% else %>
				<td><%= department.user.user_fullname%></td>
				<% end %>
				<td> <i class="fa fa-folder-open-o pr10"></i><%= link_to 'Show', department %></td>
				<td><i class="fa fa-pencil pr10"></i><%= link_to 'Edit', edit_department_path(department) %></td>
				<td><i class="fa fa-ban pr10"></i><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			  </tr>
			<% end %>
		  </tbody>
		</table>
	</div>

<%= link_to(raw(("<i class='fa fa-plus-circle pr10'></i>") + "New Department"), new_department_path(:my_department => { :division_id => @division_id }), :class => "btn btn-success") %>

</div>
