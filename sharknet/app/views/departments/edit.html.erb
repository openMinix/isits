<div class="content">
	<%= form_for @department, html: {role: "form",class: "content-center"} do |f| %>
		<blockquote>
			<p>Editing department  no#  <%= @department.id %></p>
		</blockquote>
		
		<div class="form-group">
			<%= f.label :dept_name %>
			<%= f.text_field :dept_name, :class => 'form-control' %>
		</div>

		<div class="form-group">
		<%= f.label :department_head %> <br>    
		<%= collection_select(:department, :user_id, User.all, :id, :user_fullname) %>
		</div>

		<%= fields_for @department.division do |division_fields| %>
		<%= f.label :division %><br>
		<%= division_fields.text_field :div_name,:class => 'form-control' %>
		<% end %>
		<br>
		<button class="btn btn-success"><i class='fa fa-file-text-o'></i><%= f.submit "Update department", :class => 'btn btn-success no-border' %></button>
	<% end %>
	<br>
	<button class="btn btn-info"><i class="fa fa-files-o pr10"></i><%= link_to 'Show', @department %> </button>
	<br><br>
	<button class="btn btn-primary btn-sm"><%= link_to 'Back', departments_path(:my_department => { :division_id => @department.division_id }) %></button>
</div>



