<div class="content">
	<% if(notice) %>
	<p id="notice"><%= notice %></p>
	<% end %>

	<blockquote>
		<p>Department no# <%= @department.id %></p>
	</blockquote>	

	<div class="table-responsive">
		<table class="table table-striped table-bordered table-hover table-condensed">
			<thead>
				<tr>
				  <th>Department name</th>
				  <th>Department head</th>
				  <th>Division name</th>
				  <th colspan="2">Actions</th>
				</tr>
			</thead>

			<tbody>
				<tr>
					<td><%= @department.dept_name %></td>
					<% if @department.user == nil %>
						Nobody assigned
					<% else %>
						<td><%= @department.user.user_fullname%></td>
						
					<%= fields_for @department.division do |division_fields| %>
						<td>
							<%= division_fields.text_field :div_name, :readonly => true, :class => "no-border" %>
						 </td>
					<% end %>
					<td><i class="fa fa-pencil pr10"></i><%= link_to 'Edit', edit_department_path(@department) %> </td>	
					
				   <% end %>  

				</tr>
			</tbody>
		</table>
	</div>



<%= link_to(raw(("<i class='fa fa-reply pr10'></i>") + "Back"), departments_path(:my_department => { :division_id => @department.division_id }), :class => "btn btn-primary btn-sm") %>	

</div>