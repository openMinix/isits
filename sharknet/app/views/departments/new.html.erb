<div id="myform">
	<%= form_for @department do |f| %>
		<h1>New department</h1>

		<%= f.label :dept_name %>
		<%= f.text_field :dept_name, :class => 'signin-input' %>

    <%= f.label :department_head%> <br>    
    <%= collection_select(:department, :user_id, User.all, :id, :user_fullname) %>

		
		<%= f.hidden_field :division_id, :input_html => { :value => @department.division_id }, :class => 'signin-input', :readonly => true %>
		
		<%= fields_for @department.division do |division_fields| %>
            <%= f.label :division %><br>
            <%= division_fields.text_field :div_name, :readonly => true %>
		<% end %>
		
		<%= f.submit "Create department", :class => 'btn btn-primary signin-submit' %>
	<% end %>
	<%= link_to 'Back', departments_path(:my_department => { :division_id => @department.division_id }) %>
</div>


