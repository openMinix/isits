<div class="content">

<%= form_for @division, html: {role: "form",class: "content-center"} do |f| %>
	<blockquote>
		<p>Edit division no# <%= @division.id %></p>
	</blockquote>
	
	<div class="form-group">
		<%= f.label :div_name, 'Division name' %>
		<%= f.text_field :div_name, :class => 'form-control'%>
	</div>

	<div class="form-group">
		<%= f.label :division_head%> <br>
		<%= collection_select(:division, :user_id, User.all, :id, :user_fullname, {}, {:class => 'form-control'}) %>
	</div>

	<%= button_tag(type: 'submit', class: "btn btn-success") do %>
		<i class="fa fa-file-text-o"></i> Update division
	<% end %>
   
<% end %>
<%= link_to(raw(("<i class='fa fa-files-o pr10'></i>") + "Show division"), @division, :class => "btn btn-info") %>

<br><br>

<%= link_to(raw(("<i class='fa fa-reply pr10'></i>") + "Back"), divisions_path, :class => "btn btn-primary btn-sm") %>	

</div>
