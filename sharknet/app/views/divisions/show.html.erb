<div class="content">
<% if(notice) %>
<p id="notice"><%= notice %></p>
<% end %>
<blockquote>
	<p>Division no# <%= @division.id %></p>
</blockquote>	

<div class="table-responsive">
<table class="table table-striped table-bordered table-hover table-condensed">
	<thead>
		<tr>
		  <th>Division name</th>
		  <th>Division head</th>
		  <th colspan="2">Actions</th>
		</tr>
	</thead>	
	
	<tbody>
		<tr>
		  <td><%= @division.div_name %></td>
		  <%if @division.user == nil %>
			Nobody assigned
		  <% else %>
			 <td><%= @division.user.user_fullname%></td>
			
		<td><i class="fa fa-folder-open-o pr10"></i><%= link_to 'View departments', departments_path(:my_department => { :division_id => @division.id }) %>
		<td><i class="fa fa-pencil pr10"></i><%= link_to 'Edit', edit_division_path(@division) %>
		  <% end %>
		</tr>
	</tbody>	  	  
</table>	
</div>

<%= link_to(raw(("<i class='fa fa-reply pr10'></i>") + "Back"), divisions_path, :class => "btn btn-primary btn-sm") %>	
</div>
