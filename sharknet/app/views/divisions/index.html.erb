<div class="content">
<blockquote>
	<p>Listing divisions</p>
</blockquote>

<div class="table-responsive">
<table class="table table-striped table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Division name</th>
      <th>Division head</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @divisions.each do |division| %>
      <tr>
        <td><%= division.div_name %></td>

       <% if division.user == nil %>
               <td>Nobody assigned</td>
       <% else %>
               <td><%= division.user.user_fullname%></td>
       <% end %>

        <td><i class="fa fa-folder-open-o pr10"></i><%= link_to 'Show', division %></td>
        <td><i class="fa fa-pencil pr10"></i><%= link_to 'Edit', edit_division_path(division) %></td>
        <td><i class="fa fa-ban pr10"></i><%= link_to 'Destroy', division, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<%= link_to(raw(("<i class='fa fa-plus-circle pr10'></i>") + "New Division"), new_division_path, :class => "btn btn-success") %>

</div>
