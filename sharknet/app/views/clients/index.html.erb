<div class="content">
	<blockquote>
		<p>Listing clients</p>
	</blockquote>	

	<div class="table-responsive">
		<table class="table table-striped table-bordered table-hover table-condensed">
		  <thead>
			<tr>
			  <th>Client name</th>
			  <th colspan="3">Actions</th>
			</tr>
		  </thead>

		  <tbody>
			<% @clients.each do |client| %>
			  <tr>
				<td><%= client.client_name %></td>
				<td><i class="fa fa-folder-open-o pr10"></i><%= link_to 'Show', client %></td>
				<td><i class="fa fa-pencil pr10"></i><%= link_to 'Edit', edit_client_path(client) %></td>
				<td><i class="fa fa-ban pr10"></i><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			  </tr>
			<% end %>
		  </tbody>
		</table>
	</div>

	<%= link_to(raw(("<i class='fa fa-plus-circle pr10'></i>") + "New Client"), new_client_path, :class => "btn btn-success") %>

</div>