<div class="content">

<%= form_for @client, html: {role: "form",class: "content-center"} do |f| %>
	<blockquote>
		<p>Edit client no# <%= @client.id %></p>
	</blockquote>

	<div class="form-group">	
		<%= f.label :client_name %>
		<%= f.text_field :client_name, :class => 'form-control' %>
	</div>
    
	<%= button_tag(type: 'submit', class: "btn btn-success") do %>
		<i class="fa fa-file-text-o"></i> Update client
	<% end %>
<% end %>


<%= link_to(raw(("<i class='fa fa-files-o pr10'></i>") + "Show client"), @client, :class => "btn btn-info") %>
	
<br><br>
	
<%= link_to(raw(("<i class='fa fa-reply pr10'></i>") + "Back"), clients_path, :class => "btn btn-primary btn-sm") %>	

</div>
