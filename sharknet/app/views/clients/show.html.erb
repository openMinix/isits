<div class="content">
	<% if(notice) %>
	<p id="notice"><%= notice %></p>
	<% end %>
	
	<blockquote>
		<p>Client no# <%= @client.id %></p>
	</blockquote>
	
	<div class="table-responsive">
		<table class="table table-striped table-bordered table-hover table-condensed">
			<thead>
				<tr>
				  <th>Client name</th>
				  <th colspan="2">Action</th>
				</tr>
			</thead>
			
			<tbody>
				<tr>
					<td><%= @client.client_name %></td>
					<td><i class="fa fa-folder-open-o pr10"></i><%= link_to 'View projects', projects_path(:my_project => { :client_id => @client.id }) %></td>
					<td><i class="fa fa-pencil pr10"></i><%= link_to 'Edit',edit_client_path(@client) %>
				</tr>
			</tbody>
		</table>
	</div>		
	

<%= link_to(raw(("<i class='fa fa-reply pr10'></i>") + "Back"), clients_path, :class => "btn btn-primary btn-sm") %>

</div>
